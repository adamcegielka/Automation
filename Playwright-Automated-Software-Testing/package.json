{
  "name": "playwright-automated-software-testing",
  "version": "1.0.0",
  "description": "Automated software testing with Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:record": "npx playwright codegen https://www.example.com/",
    "test:headed": "npx playwright test --headed",
    "test:browser:chromium": "npx playwright test --browser=chromium",
    "test:browser:chromium:headed": "npx playwright test --headed --browser=chromium",
    "test:browser:firefox": "npx playwright test --browser=firefox",
    "test:browser:firefox:headed": "npx playwright test --headed --browser=firefox",
    "test:browser:webkit": "npx playwright test --browser=webkit",
    "test:browser:webkit:headed": "npx playwright test --headed --browser=webkit",
    "test:browser:all": "npx playwright test --browser=all",
    "report": "npx playwright show-report",
    "open:ui": "npx playwright test --ui",
    "debugging:all": "npx playwright test --debug",
    "debugging:one": "npx playwright test example.spec.ts --debug"
  },
  "author": "Adam Cegielka",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.33.0",
    "prettier": "^2.8.8"
  }
}

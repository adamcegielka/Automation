{
  "name": "playwright-automated-software-testing",
  "version": "1.0.0",
  "description": "Automated software testing with Playwright",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "open:ui": "npx playwright test --ui",
    "test:record:example": "npx playwright codegen https://www.example.com/",
    "test:record:automationteststore": "npx playwright codegen https://automationteststore.com/",
    "test:record:zero:webappsecurity": "npx playwright codegen http://zero.webappsecurity.com/",
    "test:chromium": "playwright test --config=playwright.config.ts --project=Chromium",
    "test:chromium:headed": "playwright test --headed --config=playwright.config.ts --project=Chromium",
    "test:firefox": "playwright test --config=playwright.config.ts --project=Firefox",
    "test:firefox:headed": "playwright test --headed --config=playwright.config.ts --project=Firefox",
    "test:webkit": "playwright test --config=playwright.config.ts --project=Webkit",
    "test:webkit:headed": "playwright test --headed  --config=playwright.config.ts --project=Webkit",
    "debugging:chromium": "playwright test --debug --config=playwright.config.ts --project=Chromium",
    "debugging:firefox": "playwright test --debug --config=playwright.config.ts --project=Firefox",
    "debugging:webkit": "playwright test --debug --config=playwright.config.ts --project=Webkit",
    "tests:e2e:chromium": "playwright test --config=e2e.config.ts --project=Chromium",
    "tests:e2e:firefox": "playwright test --config=e2e.config.ts --project=Firefox",
    "tests:e2e:webkit": "playwright test --config=e2e.config.ts --project=Webkit",
    "tests:visual:chromium": "playwright test --config=visual.config.ts --project=Chromium",
    "tests:visual:firefox": "playwright test --config=visual.config.ts --project=Firefox",
    "tests:visual:webkit": "playwright test --config=visual.config.ts --project=Webkit",
    "tests:visual:chromium:update": "playwright test --config=visual.config.ts --project=Chromium --update-snapshots",
    "tests:visual:firefox:update": "playwright test --config=visual.config.ts --project=Firefox --update-snapshots",
    "tests:visual:webkit:update": "playwright test --config=visual.config.ts --project=Webkit --update-snapshots",
    "tests:api": "playwright test --config=api.config.ts --project=Chromium"
  },
  "author": "Adam Cegielka",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.39.0",
    "prettier": "^2.8.8"
  }
}
